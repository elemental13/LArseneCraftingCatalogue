@model IndexModel

<div style="width:100%; margin:0 auto;">
    <table id="manufactureTable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Value</th>
                <th>Rarity</th>
                <th>Attunement</th>
                <th>Component Type</th>
                <th>Component Name</th>
            </tr>
        </thead>
        @foreach (var item in Model.ViewData["CraftableItems"] as List<MagicItem> ?? new List<MagicItem>()) {
            <tr>
                <td>@item?.Name</td>
                <td>@item?.MagicItemType</td>
                <td>@item?.ItemValue</td>
                <td>@item?.Rarity</td>
                <td>@item?.Attunement</td>
                <td>@Model.GetMonsterComponent(item?.MonsterComponentId ?? 0)?.Type</td>
                <td>@Model.GetMonsterComponent(item?.MonsterComponentId ?? 0)?.Name</td>
            </tr>
        }
    </table>
</div>